.product__carousel
  margin 0 0 1em 0
  position: relative
  .owl-nav
    .owl-prev
      left: -5px
    .owl-next
      right: -5px
    .owl-next, .owl-prev
      position: absolute
      top calc(50% - 13px)
      span
        transition: all 300ms ease
        padding 6px 16px
        font-size rem(22px)
        color #4aa933
        background-color: #fff
      &:hover
        cursor: pointer
  &-thumbs
    margin-bottom: 1em
    img
      width: 114px
      height: 114px
    .owl-item
      position: relative
      &:after
        transition: all 300ms ease
        content ""
        position: absolute
        left: 3em
        right: 3em
        bottom: .4em
        height 4px
        opacity 0
        background: rgba(255,255,255,.6)
      &.current:after
        opacity 1
.product__text, .tabs
  xs-block({
    margin-left: 1em
    margin-right: 1em
  })