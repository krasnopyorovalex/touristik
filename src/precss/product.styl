.carousel__box
  xs-block({
    margin: 0 1em 1em 1em
  })
.carousel__box
  .owl-nav
    .owl-prev
      left: 0
    .owl-next
      right: 0
    .owl-next, .owl-prev
      position: absolute
      top calc(50% - 24px)
      span
        transition: all 300ms ease
        padding 0 10px
        font-size rem(48px)
        color $mainColor
        background-color: #fff
      &:hover
        cursor: pointer
  .product__carousel-thumbs
    .owl-nav
      .owl-next, .owl-prev
        top calc(50% - 18px)
        span
          padding: 2px 12px
.product__carousel
  margin 0 0 1em 0
  position: relative
  box-sizing border-box
  &-thumbs
    margin-bottom: 1em
    img
      max-height: 114px
    .owl-item
      position: relative
      &:after
        transition: all 300ms ease
        content ""
        position: absolute
        left: 3em
        right: 3em
        bottom: .4em
        height 4px
        opacity 0
        background: rgba(255,255,255,.6)
      &.current:after
        opacity 1
.product__text, .tabs
  xs-block({
    margin-left: 1em
    margin-right: 1em
  })
.product_price {
  color: $mainColor
  font-size rem(24px)
  font-weight 700
  margin 0 0 .5rem 0
  position: relative
  border-left: 2px solid $mainColor
  padding 8px 0 8px 8px
  &:after {
    content: '';
    position: absolute
    width: 40%
    height: 2px
    background-color: $mainColor
    top: 0
    left: 0
  }
  &:before {
    content: '';
    position: absolute
    width: 90%
    height: 2px
    background-color: $mainColor
    bottom: 0
    left: 0
  }
  span {
    font-size rem(20px)
  }
}
.product_filters {
  tr th {
    border none
    padding: 8px 10px
    vertical-align: middle
    background-color: $topLineBg
  }
  tr td {
    border: none
    padding: 8px 10px
    vertical-align: middle
    border-bottom: 1px solid $topLineBg
    &:first-child {
      width: 140px
      sm-block({
        width: auto
      })
    }
  }
  tr:nth-child(2n) td {
    border-bottom: 1px solid $mainColor
  }
  tr:last-child td {
    border none
  }
}
.product_image {
  text-align: center
  img {
    width: auto
    object-fit cover
  }
}
.product__text div, .product__text span {
  font-size: rem(18px);
  margin .5rem 0;
}
