.icon
  fill: #ffffff
  display: inline-block
  vertical-align: middle
img
  width: 100%
  height: auto
.owl-theme
  .owl-nav.disabled + .owl-dots
    margin: 0
.owl-carousel
  .item
    padding 8em 0
    position: relative
    background-size cover
    clip-path: polygon(50% 100%, 100% 90%, 100% 0, 0 0, 0 90%)
    sm-block({
      text-align: center
      padding: 4em 0
    })
    &:before
      position: absolute
      content ""
      background-color: rgba(0, 0, 0, 0.5)
      top: 0
      right: 0
      left: 0
      bottom: 0
      z-index -1
      clip-path: polygon(50% 100%, 100% 90%, 100% 0, 0 0, 0 90%)
    .col-6
      position: relative
    .owl-text
     .sub, .desc
        color: #5ac840
        font-size: rem(18px)
        font-weight: 600
        line-height: 18px
        text-transform: uppercase
     .desc
       color: #ffffff
       line-height: 26px
       font-weight 500
       text-transform: none
     .name
        margin: .5em 0
        color: #ffffff
        font-size: rem(38px)
        line-height: 50px
        text-transform: uppercase
        font-weight: 700
        sm-block({
          line-height: 40px
          font-size: rem(28px)
        })
     .btn
       color #ffffff
       margin 2em 0 0 0
  .owl-dots
    z-index 12
    right: 0
    top: 2em
    position: absolute
    display: flex
    align-items flex-end
    flex-direction column-reverse
    xs('position','relative')
    xs-block({
      flex-direction: row
      align-items: center
      align-content: center
      top: unset
      right: unset
      margin: 1em 0 0 0
    })
    .owl-dot
      & + .owl-dot
        margin-bottom: 1em
        xs-block({
          margin-bottom: 0
          margin-left: 1em
        })
      span
        margin: 0
        padding: 0
        border none
        transform rotate(270deg)
        color: #9a9a9a
        font-family: "Roboto Medium"
        font-size: rem(24px)
        font-weight: 500
        line-height: normal
        width: 35px
        height: 35px
        xs-block({
          transform: rotate(0)
        })
      span, &.active span, &:hover span
        background: none
      &.active span
        width: 45px
        height: 45px
        font-size rem(35px)
        color: #ffffff
.btn
  background-color: #4aa933
  display: inline-block
  padding 10px 25px
  position: relative
  &:after
    transition: all 300ms ease
    position: absolute
    content: ""
    top: 4px
    bottom: 4px
    right: 4px
    left: 4px
    border: 1px solid #ffffff
    opacity 0
  &:hover
    cursor: pointer
    &:after
      opacity 1
.title
  padding 0 0 1.5em 0
  margin 1em 0 .5em 0
  text-align: center
  color: #000000
  font-size: rem(30px)
  font-weight: 500
  line-height: 20px
  position: relative
  xs-block({
    font-size: rem(26px)
  })
.sub__title
  margin 1em 0 0 0
  text-align: center
  color: #4aa933
  font-size: rem(20px)
  font-weight: 500
  line-height: 20px
  text-transform: uppercase
  xs-block({
    font-size: rem(18px)
  })
.gallery__box
  display: flex
  flex-wrap: wrap
  margin: 1em 0
  align-content center
  figure
    position: relative
    box-sizing border-box
    flex-basis 20%
    xs-block({
      flex-basis: 50%
    })
    &:after
      background-color: rgba(0, 0, 0, 0.5)
      position: absolute
      content ""
      top: 0
      bottom: 0
      right: 0
      left: 0
      transition: all 300ms ease
      opacity 0
    img
      height: 100%
    .icon__zoom
      transition: all 300ms ease
      content ""
      position: absolute
      top: calc(50% - 26px)
      left: calc(50% - 26px)
      sprite($icon_zoom)
      opacity 0
      z-index 10
      cursor: pointer
    &:hover
      &:after
        opacity 1
      .icon__zoom
        opacity 1
section, main
  .title
    &:after
      bottom: 0
      left: calc(50% - 70px)
      position: absolute
      content ""
.title__section
  background-color: #4aa933
  text-align: center
  background-image url("../img/pattern.jpg")
  background-repeat repeat
  h1
    color #ffffff
.hidden
  display: none
.catalog__items
  margin-top 1em
  margin-bottom 1em
  row-flex()
  &-item
    position: relative
    margin-top 1em
    text-align: center
    background-color: #ebebeb
    padding 0 0 1em 0
    col()
    size(4)
    size-md(6)
    size-xxs(12)
    display: flex
    flex-direction column
    align-content center
    xs-block({
      margin: 1em 1em 0 1em
    })
    a:after
      display: none
    figure
      flex-grow 2
      margin 0 0 auto 0
      transition: all 300ms ease
      padding: 2em
      display: flex
      flex-wrap wrap
      flex-direction column
      align-items center
      border-bottom 1px solid rgba(0,0,0,0.1)
      a
        margin auto 0
    &:hover
      figure
        background-color: rgba(0,0,0,.4)
    .catalog__items-info
      padding 1em
      .name a
        color #000
        font-size: rem(18px)
        font-weight: 500
        line-height: 22px
        &:hover
          color: #4aa933
      .prices
        margin 2em 0
        font-weight: 500
        line-height: 18px
        display: flex
        .price__new
          width: 50%
          font-size: rem(20px)
          text-align: left
        .price__old
          text-align: right
          width: 50%
          color: #404040
          text-decoration: line-through
          font-size rem(14px)
      .btn__go
        color: #ffffff
        background-color: #4aa933
        border: 1px solid #4aa933
        padding 10px 30px
        font-size rem(18px)
        font-weight: 500
        line-height: 26px
        &:hover
          background-color: transparent
          color: #000000
.pagination
  text-align: center
  margin 2em 0 1em 0
  ul
    li
      display: inline-block
      &.active
        a
          color: #4aa933
      a
        border: 1px solid #d9d6d6
        padding 5px 16px
        color: #6c6c6c
        font-size: rem(18px)
        font-weight: 400
        &:after
          display: none
        &:hover
          color: #4aa933
.banners
  margin 1em 0
.label__product
  position: absolute
  top: 1em
  padding 5px 15px
  color: #ffffff
  font-size rem(16px)
  z-index 10
  &.new
    background-color: #4aa933
  &.info
    background-color: #4c96e5
    right: 0
.another__products
  .catalog__items
    margin: 2em 0 1em 0
    display: inline-block
    &-item
      margin: 0
      width: 100%
.catalog__items
  position: relative
  &.owl-carousel
    figure
      min-height 288px
  .owl-nav
    position: absolute
    right: -5px
    top: -3em
    .owl-next, .owl-prev
      span
        transition: all 300ms ease
        border: 1px solid #d9d6d6
        padding 2px 10px
      &:hover
        background: none
        span
          color #4aa933
          border: 1px solid #4aa933
.tabs
  display:inline-block
  margin 1em 0
.tabs > div
  padding-top:10px
.tabs>ul
  margin:0
  padding:0
.tabs>ul:after
  content:""
  display: block
  clear:both
  height:1px
  background:#4aa933
.tabs>ul li
  cursor:pointer;
  display:block;
  float:left;
  padding:10px 15px;
  background: #ebebeb
  color: #2b2b2b
  + li
    border-left: 1px solid #d6d6d7
  &:first-child
    border-top-left-radius 5px
  &:last-child
    border-top-right-radius 5px
.tabs>ul li.active, .tabs>ul li.active:hover
  background: #4aa933
  color:#fff
.tabs>ul li:hover
  background:#d6d6d7
table
  width: 100%;
  max-width: 100%;
  margin-bottom: 1rem;
  background-color: transparent
table th,table td
  padding: 0.75rem;
  vertical-align: top;
  border-top: 1px solid #ebebeb
table thead th
  vertical-align: bottom;
  border-bottom: 2px solid #ebebeb
table tbody + tbody
  border-top: 2px solid #ebebeb
table th, table td
  border: 1px solid #ebebeb