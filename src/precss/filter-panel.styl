.filter__panel
  margin 1em 0
  position: relative
  xs-block({
    margin: 1em
  })
  .filter__block, .filter__block-price
    border-bottom: 1px solid #6a6a6a
    padding 0 0 1em 0
    &+.filter__block
      padding 1em 0
  .filter__block
    .label
      position: relative
      padding 5px 0
      color: #000000
      font-size: rem(16px)
      font-weight: 500
      &:hover
        cursor: pointer
      &:after
        transform: rotate(180deg)
        transition: all 300ms ease
        content ""
        position: absolute
        right: 0
        top: 12px
        sprite($icon_arrow_black)
  &-form
    md('display','none')
    .filter__block.is__opened
      .label:after
        transform: rotate(0deg)
    .list, .tags
      max-height 228px
      overflow auto
      margin 5px 0
      padding 1em 1.2em
      border: 1px solid #c1bebe
      .list__item
        position: relative
        & + .list__item
          margin .6em 0 0 0
    .tags
      border: none
      max-height: 100%
      padding 1em 0
      li
        margin: 0 4px 10px 0
        display: inline-block
        a
          display: block
          color: #2f2f2f
          font-size: rem(14px)
          font-weight: 400
          padding 4px 8px
          border: 1px solid #d9d6d6
          background-color: #ffffff
          &:hover
            border: 1px solid $mainColor
            &:after
              opacity 0
    .single__block-price
      display: flex
      flex-wrap wrap
      > div
        col()
        size(6)
        &:last-child
          text-align: right
        label, input
          display: inline-block
        label + input
          margin-left: 4px
        input
          border: 1px solid #c1bebe
          background-color: #eeeeee
          text-align: center
          width: 80px
          padding 4px 5px
.sorting
  margin 1em 0
  display: block
  text-align: right
  md-block({
    text-align: center
  })
  .label
    display: inline-block
    font-size: rem(16px)
    font-weight: 500
  form
    display: inline-block
    .single__block
      display: inline-block
      margin 0 0 0 1em
      md-block({
        margin: 5px 0 0 0
      })
    select
      outline none
      appearance: none
      padding 8px 30px 8px 10px
      display: inline-block
      border: 1px solid #c1bebe
      background-color: #ffffff
.run_filter-btn {
  display: none
  border-radius: 8px;
  width: 120px;
  padding: 0;
  font-size: 16px;
  line-height: 50px;
  height: 50px;
  border: none;
  outline: none;
  cursor: pointer;
  text-align: center;
  color: #fff;
  background-image: linear-gradient(to bottom , $topLineBg, $mainColor);
  font-weight: bold;
  position: absolute;
  right: -120px;
  z-index: 10
  md-block({
    right: 5px
  })
}
.run_filter-btn:before {
  display: block;
  content: '';
  position: absolute;
  left: -5px;
  top: calc(50% - 16px);
  background-image: linear-gradient(45deg, $topLineBg, $mainColor);
  width: 34px;
  height: 34px;
  border-radius: 4px;
  transform: rotate(135deg);
  z-index: -1;
}
.run_filter-btn:hover {
  background-image: linear-gradient(to bottom , $mainColor, $topLineBg);
}
.run_filter-btn:hover:before {
  background-image: linear-gradient(45deg, $mainColor, $topLineBg);
}
.filter__panel-btn {
  background-color: $mainColor
  padding .8rem 1rem
  margin 0 0 1rem 0
  display: none
  md('display','flex')
  md('align-items','center')
  .btn_toggle {
    margin 0 0 0 auto
  }
}
