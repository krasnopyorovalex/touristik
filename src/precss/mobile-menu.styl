.burger-mob
  position: relative
  width: 31px
  height: 16px
  right: 1em
  top: 2.2em
  sm('position','absolute')
  span
    position: absolute
    display: block
    width: 100%
    height: 2px
    top: calc(50% - 1px)
    left: 0
    background-color: #2b2b2b
  &:before, &:after
    position: absolute;
    content: '';
    display: block
    width: 100%
    height: 2px
    background-color: #2b2b2b
  &:after
    right: 0
    bottom: 0
    width: 20px
.call__btn
  position: absolute
  left: 1em
  top: calc(50% - 25px)
  sprite($icon_call__btn)
.mobile__menu
  display: none
  li
    margin 8px 0
    display: block
    border-bottom: 1px solid #2F4F4F
    a
      padding 8px 5px
      text-transform: uppercase
      display: block
      color #ffffff
  .socials
    margin 2em 0 0 5px
    text-align: left
    > a + a
      margin-left: 1em
    .vk
      width: 20px
      height: 18px
    .fb
      width: 20px
      height: 16px
    .ok
      width: 20px
      height: 17px
    .insta
      width: 16px
      height: 15px
    .twitter
      width: 24px
      height: 18px
  &.is__opened
    background-color: #373737
    position fixed
    top: 0
    right: 0
    bottom: 0
    left: 5em
    z-index 30
    padding 2em
    .menu-overlay-mob
      opacity 1;
.menu-overlay-mob
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100vh
  background-color: rgba(0,0,0,0.7)
  z-index: -1
  opacity 0
.close-menu-btn
  position: absolute
  top: 1em
  left: -50px
  width: 15px
  height: 15px
  &:before, &:after
    position: absolute
    content: ''
    width: 25px
    height: 2px
    top: calc(50% - 1px)
    left: -5px
    background-color: #ffffff
  &:before
    transform rotate(45deg)
  &:after
    transform rotate(-45deg)