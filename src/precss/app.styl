flex-version = flex
vendor-prefixes = official
@import "nib"
@import "smart-grid"
@import "type-utils"
@import "fonts"
@import "sprite"

base-font-size = 16px
support-for-ie = false

$topLineBg = #024677
$footerBg = #024677
$mainColor = #0797fc

reset()

//.debug
//  z-index 10
//  debug(rgba(0,0,0,0.4), 1px solid #ff0)
*,*::before,*::after
  box-sizing: border-box
body
  font-family "Roboto Condensed"
  position: relative
  background-color: #fff
a, .icon
  text-decoration:none
  color: $mainColor
  cursor:pointer
  transition: all 300ms ease
a:hover,a:focus,a:visited
  text-decoration:none
  outline:none
p
  margin 0 0 15px 0
  text-align justify
  font-size rem(16px)
  line-height normal
h1, .as__h1, h2, .as__h2, h3, .as__h3, h4, .as__h4, h5, .as__h5
  color: #000000
  font-size: rem(40px)
  font-weight: 400
  margin-bottom .5em
  margin-top .5em
  md-block({
    font-size: rem(24px)
  })
h2, .as__h2
  font-size: rem(32px)
  md-block({
    font-size: rem(22px)
  })
h3, .as__h3
  font-size: rem(28px)
  md-block({
    font-size: rem(20px)
  })
h4, .as__h4
  font-size: rem(24px)
  md-block({
    font-size: rem(18px)
  })
h5, .as__h5
  font-size: rem(20px)
  md-block({
    font-size: rem(16px)
  })
svg
  width: 0
  height: 0
.loader__bg
  position: fixed
  z-index 35
  left: 0
  top: 0
  bottom: 0
  right: 0
  background-color: #fff
.loader
  position: fixed
  z-index 40
  top: 50%
  left: 50%
  height: 10rem
  width: 10rem
  transform: translateX(-50%) translateY(-50%)
  > .circle
    position: absolute
    height: inherit
    width: inherit
    background:$mainColor
    border-radius: 50%
    animation: animate-circle 2s cubic-bezier(.9,.24,.62,.79) infinite
    &:nth-of-type(1)
      animation-delay: 0
    &:nth-of-type(2)
      animation-delay: calc(2s / -3)
    &:nth-of-type(3)
      animation-delay: calc(2s / -6)
.not__overflow
  overflow hidden
.container
  wrapper()
.row
  row-flex()
  justify-content center
  .col-12
    col()
    size(12)
  .col-11
    col()
    size(11)
    size-xs(12)
  .col-10
    col()
    size(10)
    size-xs(12)
  .col-9
    col()
    size(9)
    size-xs(12)
  .col-8
    col()
    size(8)
    size-md(12)
    size-xs(12)
  .col-7
    col()
    size(7)
    size-xs(12)
  .col-6
    col()
    size(6)
    size-xs(12)
  .col-5
    col()
    size(5)
    size-lg(5)
    size-md(11)
    size-xs(12)
  .col-4
    col()
    size(4)
    size-xs(6)
    size-xxs(12)
  .col-3
    col()
    size(3)
    size-md(6)
    size-xs(12)
    size-xxs(12)
  .col-2
    col()
    size(2)
    size-xs(12)
.visible__xs
  display: none
  xs-block({
    display: block
  })
.visible__sm
  display: none
  sm-block({
    display: block
  })
figure
  margin: 0
  padding: 0
.center
  text-align: center
header
  color #ffffff
  nav
    position: relative
    background-color: #fff
    width: 100%
    z-index 20
  .top__line
    padding 12px 0
    background-color: $topLineBg
    font-size rem(14px)
    .btn
      xxs-block({
        padding: 10px 15px
      })
    .row
      align-items center
      [class*="col-"]
        md-block({
          text-align: center
        })
        size-md(12)
    a
      color #ffffff
      &:hover
