    .phone
      display: inline-block
      & + .phone
        margin-left: 1em
      &:hover
        .icon
          fill: $mainColor
      .icon
        margin-right 2px
        vertical-align: top
        width: 14px
        height: 14px
    .address
      md-block({
        margin: 1em 0
      })
      .icon
        vertical-align: top
        margin-right 2px
        width: 13px
        height: 15px
    .search__socials-icons
      display flex
      flex-wrap wrap
      justify-content flex-end
      align-items center
      md-block({
        justify-content: center
      })
      .icon:hover
        fill: $mainColor
      .delimiter
        margin 0 16px
        width: 1px
        align-self stretch
        background-color: #5d5d5d
      a + a
        margin-left: 8px
      .search
        width: 17px
        height: 17px
      .vk
        width: 20px
        height: 18px
      .fb
        width: 20px
        height: 16px
      .ok
        width: 20px
        height: 17px
      .insta
        width: 16px
        height: 15px
      .twitter
        width: 24px
        height: 18px
.header__nav
  display: flex
  flex-wrap wrap
  justify-content: space-between
  align-items center
  padding .5em 0
  sm-block({
    justify-content: center
  })
  >li
    display: inline-block
    position: relative
    &.has__child
      &:after
        position: absolute
        right: -15px
        top: 4px
        content ""
        sprite($icon_arrow_menu_down)
    >ul
      position: absolute
      min-width 240px
      top: 30px
      left: calc(50% - 120px)
      opacity 0
      background-color: #fff
      border-top 2px solid #272727
      visibility hidden
      transition: all 300ms ease
      box-shadow 0 3px 7px rgba(0,0,0,.35)
      li
        text-align: center
        display: block
        &:hover
          background-color: #ebebeb
          a
            color: $mainColor
        a
          padding 10px 15px
          display: block
          color #272727
        & + li
          border-top 1px solid #ccc
    &:hover
      >ul
        visibility visible
        opacity 1
    >a
      color: #272727
      font-size: rem(18px)
      font-weight: 500
      line-height: 18px
      position: relative
      text-transform: uppercase
      padding 10px 5px
      &:after
        transition: all 300ms ease
        position: absolute
        content ""
        width 10%
        height: 2px
        background-color: $mainColor
        bottom: 5px
        left 5px
        opacity 0
      img
        width: 120px
        sm-block({
          width: 90px
        })
    &:not(.logo)
      sm-block({
        display: none
      })
    &:hover:not(.logo), &.active
      > a
        color: $mainColor
        &:after
          width 50%
          opacity 1
.is-sticky
  transition: all 300ms ease
  nav
    box-shadow 0 3px 7px rgba(0, 0, 0, 0.35)
.travels
  background-image url("../img/mountains_bg.png")
  background-position center bottom
  background-repeat no-repeat
  padding 2em 0
  xs-block({
    padding: 0
  })
  .title
    &:after
      sprite($icon_mountains)
  .row
    .col-4
      size-xs(6)
.travel__item-two, .travel__item
  xs-block({
    margin: .4em
  })
  .btn__more
    transition: all 300ms ease
    content ""
    position: absolute
    top: calc(50% - 26px)
    left: calc(50% - 26px)
    sprite($icon_zoom)
    opacity 0
    z-index 10
    cursor: pointer
  &:hover
    &:after, .btn__more, a:after
      opacity 1
.travel__item
  position: relative
  margin-top: 2em
  background-image: linear-gradient(to top, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.6) 20%, rgba(0, 0, 0, 0.4) 34%, rgba(0, 0, 0, 0.3) 47%, rgba(0, 0, 0, 0.1) 60%, rgba(0, 0, 0, 0) 100%);
  &:after
    transition: all 300ms ease
    background-color: rgba(0, 0, 0, 0.4)
    position: absolute
    content ""
    top: 0
    bottom: 0
    right: 0
    left: 0
    opacity 0
  &-name a
    padding 5px 1em
    z-index 10
    position: absolute
    bottom: 2em
    width: 100%
    text-align: center
    color: #ffffff
    font-size: rem(22px)
    font-weight: 500
    line-height: 30px
    text-transform: uppercase
    xs-block({
      bottom: 1em
      line-height: normal
      font-size: rem(15px)
    })
    &:after
      transition: all 300ms ease
      position: absolute
      content ""
      bottom: 0
      left: calc(50% - 30px)
      background-color: $mainColor
      width 60px
      height: 2px
      opacity 0
    &:hover:after
      left: calc(50% - 60px)
      width: 120px
.travel__item-two
  position: relative
  margin-top: 2em
  xs-block({
    margin: 1em
  })
  .travel__count
    position: absolute
    left: .1em
    bottom: -.04em
    opacity: 0.6;
    color: #ffffff
    font-size: rem(90px)
    font-weight: 700
    text-transform: uppercase
    z-index 10
    xs-block({
      font-size: rem(65px)
    })
  img
    height: 100%
  &:after
    transition: all 300ms ease
    background-color: rgba(0, 0, 0, 0.54)
    position: absolute
    content ""
    top: 0
    bottom: 4px
    right: 0
    left: 0
    opacity 0
  &:hover
    &:after
      opacity 1
  .travel__item-name a
    background-color: rgba(0, 0, 0, 0.54)
    clip-path: polygon(0 0, 0% 100%, 100% 100%);
    padding 3em .5em 1.5em .5em
    text-align: left
    bottom: 4px
    left: 0
    z-index: 12
    &:after
      left: .5em
      bottom: 1.4em
.info__text
  //margin 2em 0 0 0
  .title
    &:after
      bottom: 0
      left: calc(50% - 70px)
      position: absolute
      content ""
      sprite($icon_sun)
  [class*="col-"]
    position: relative
  .col-6
    size-md(12)
  .text
    margin 1em 0 2em 0
    xs-block({
      margin: 1em
    })
    p
      line-height 22px
    a
      color: #ffffff
  .img__bg img
    height: 100%
    width: 100%
    position: absolute
    left: 0
    right: 0
    bottom: 0
    top: 0
.begin__travel
  position: relative
  padding 2em 0 3em 0
  xs-block({
    padding: 2em 0 0 0
  })
  .col-7, .col-5
    size-md(12)
  .bg__layer
    clip-path: polygon(50% 100%, 100% 90%, 100% 0, 0 0, 0 90%)
    background-color: #ebebeb
    position: absolute
    top: 0
    bottom: 6em
    right: 0
    left: 0
    z-index -1
  .desc
    margin-top: 4em
    xs-block({
      margin: 0 1em
    })
  .title__first, .title__second
    color: #2b2b2b
    font-size: rem(42px)
    font-weight: 600
    text-transform: uppercase
    xs-block({
      font-size: rem(22px)
    })
  .title__second
    color: $mainColor
  p
    color: #000000
    margin 2em 0 0 0
    font-size: rem(18px)
    font-weight: 400
    line-height: 24px
    xs-block({
      margin: 1em 0 0 0
    })
.gallery
  .title
    &:after
      sprite($icon_forest)
.guides
  margin 2em 0
  .row
    .col-3
      size-xs(6)
  .title
    &:after
      sprite($icon_camp)
  .sub__title
    xs-block({
      margin: 1em 0
    })
  .guide__item
    overflow hidden
    position: relative
    margin 1em 0 0 0
    border-bottom 2px solid #494949
    transition: all 300ms ease
    xs-block({
      margin: .2em 0
    })
    .ava
      position: relative
      img
        height: 100%
      &:after
        background-color: rgba(0, 0, 0, 0.5)
        transition: all 300ms ease
        position: absolute
        top: 0
        bottom: 0
        left: 0
        right: 0
        content ""
        opacity 0
    &:hover
      cursor: pointer
      border-bottom 2px solid $mainColor
      .ava:after
        opacity 1
    .info
      min-height 120px
      clip-path: polygon(0 0, 100% 30%, 100% 100%, 0% 100%)
      text-align: center
      background-color: #ebebeb
      position: absolute
      bottom: 0
      right: -1%
      left: -1%
      padding 1em 1em 0 1em
      display: flex
      flex-wrap wrap
      flex-direction column
      xs-block({
        min-height: auto
      })
      .name
        color: #000000
        margin 2em 0 0 0
        font-size: rem(20px)
        font-weight: 400
        position: relative
        line-height: 20px
        text-transform: uppercase
        xs-block({
          font-size: rem(18px)
          line-height: normal
          margin: auto 0 10px 0
        })
        &:after
          transition: all 300ms ease
          position: absolute
          content ""
          width 20px
          height: 3px
          background-color: $mainColor
          bottom: -5px
          left calc(50% - 10px)
          opacity 0
        &:hover:after
          opacity 1
          left calc(50% - 25px)
          width 50px
      .text
        margin auto 0 0 0
        xs-block({
          display: none
        })
      .text, .text p
        text-align: center
        color: #000000
        font-size: rem(14px)
        font-weight: 400
        line-height: 20px
.counts
  background-image url("../img/counts_bg.jpg")
  background-repeat no-repeat
  background-size cover
  padding 3em 0
  margin 1em 0
  &.without__margin
    margin: 0
  .count__item
    color #ffffff
    text-align: center
    .icon__box
      width: 58px
      height: 58px
      display: inline-block
    .icon
      display: inline-block
      &:hover
        cursor: default
    .photo
      sprite($icon_photo_big)
    .map
      sprite($icon_map_big)
    .bus
      sprite($icon_bus_big)
    .tourist
      sprite($icon_tourist_big)
    .count
      font-size: rem(62px)
      margin 10px 0 15px 0
      padding 10px 0
      font-weight: 500
      text-transform: uppercase
      position: relative
      flex-grow: 2
      xs-block({
        font-size: rem(42px)
      })
      &:after
        position: absolute
        content ""
        bottom: 4px
        height 4px
        background-color: $mainColor
        width: 50px
        left calc(50% - 25px)
    .count__name
      font-size: rem(32px)
      font-weight: 700
      margin: 10px 0
      text-transform: uppercase
      xs-block({
        font-size: rem(22px)
      })
    .count__desc, .count__desc p
      font-size: rem(18px)
      text-align: center
      font-weight: 400
      line-height: 22px
main, .info__text
  ul:not(.breadcrumbs):not(.not__decorated)
    margin  0 0 15px 0
    li
      padding-left: 1em
      position: relative
      line-height 22px
      &:after
        position: absolute
        width: 5px
        height: 5px
        content ""
        left: 4px
        top: 9px
        border-radius 50%
        background-color: $mainColor
  a:not(.btn):not(.show__tour):not(.btn__more):not(.prev__item):not(.next__item)
    position: relative
    &:after
      position: absolute
      transition: all 300ms ease
      content ""
      bottom: -1px
      left: 0
      height 1px
      width: 10%
      background-color: $mainColor
      opacity 0
    &:hover:after
      opacity 1
      width: 100%
  p
    line-height: 22px
main
  min-height: 58vh
  .seo__text
    .sitemap
      ul
        margin: 0
.seo
  background-image: url("../img/seo_bg.png")
  background-repeat no-repeat
  background-size cover
  padding 0 0 2em 0
  p
    line-height: 22px
  &__text
    padding 1em 2em
    background-color: rgba(255,255,255,.5)
    margin 2em 0
    xs-block({
      margin: 0
      padding: 1em
    })
